<div class = "middle-frame">
<p id="notice"><%= notice %></p>

<h1>Listing Performances</h1>

<table>
  <thead>
    <tr>
      <th>Stakeholder Satisfaction</th>
      <th>Timely delivery</th>
      <th>Budget delivery</th>
      <th>Planned scope delivery</th>
      <th>Quality requirements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performances.each do |performance| %>
      <tr>
        <td><%= performance.stakeholder_satisfaction %></td>
        <td><%= performance.timely_delivery %></td>
        <td><%= performance.budget_delivery %></td>
        <td><%= performance.planned_scope_delivery %></td>
        <td><%= performance.quality_requirements %></td>
        <td><%= link_to 'Show', performance %></td>
        <td><%= link_to 'Edit', edit_performance_path(performance) %></td>
        <td><%= link_to 'Destroy', performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Performance', new_performance_path %>

</div>
